<Window x:Class="LogVisualizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:data="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
        xmlns:local="clr-namespace:LogVisualizer"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="450" Width="800"
        Background="Black" Foreground="WhiteSmoke"
        d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ComboBox x:Name="SelectionBox" Background="Transparent"/>
        <data:WpfPlot Background="Transparent" x:Name="Graph" Grid.Row="1"/>
    </Grid>
</Window>
