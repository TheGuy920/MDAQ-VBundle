<UserControl
    x:Class="LogVisualizer.Models.PlotGraph"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
    xmlns:local="clr-namespace:LogVisualizer.Models"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    MinWidth="600"
    MinHeight="400"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Border
        x:Name="BorderSelector"
        Grid.Row="1"
        Padding="10"
        Background="#01FFFFFF"
        BorderBrush="Transparent"
        BorderThickness="3"
        CornerRadius="2"
        MouseDown="Selected">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Button
                Padding="10,2"
                HorizontalAlignment="Right"
                BorderThickness="0"
                Click="RemoveSelf"
                Content="X"
                FontWeight="Bold"
                Foreground="Red" />
            <data:WpfPlot x:Name="Graph" Grid.Row="1" />
        </Grid>
    </Border>
</UserControl>
